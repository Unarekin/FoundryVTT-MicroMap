<section data-role="overlay-settings">
  <div class="flexrow">
    <div></div>
    <div class="flex0"><canvas data-role="preview" style="display:none"></canvas></div>
    <div></div>
  </div>
  
  <div class="form-group">
    <label for="file">{{localize "Path"}}</label>
    <file-picker
      id="file"
      name="file"
      type="imagevideo"
      value="{{file}}"
    ></file-picker>
  </div>
  
  <div class="form-group">
    <label>{{localize "MINIMAP.SETTINGS.OVERLAY.SHOW"}}</label>
    <input type="checkbox" name="visible" id="visible" {{checked visible}}>
  </div>

  <div class="form-group">
    <label>{{localize "MINIMAP.SETTINGS.OVERLAY.BORDERS"}}</label>
  </div>

  <div class="form-group slim">
    <label for="left">{{localize "MINIMAP.SETTINGS.OVERLAY.LEFT"}}</label>
    <input type="number" min="0" step="1" name="left" id="left" value="{{left}}">

    <label for="right">{{localize "MINIMAP.SETTINGS.OVERLAY.RIGHT"}}</label>
    <input type="number" min="0" step="1" name="right" id="right" value="{{right}}">
  </div>

  <div class="form-group slim">
    <label for="top">{{localize "MINIMAP.SETTINGS.OVERLAY.TOP"}}</label>
    <input type="number" min="0" step="1" name="top" id="top" value="{{top}}">

    <label for="bottom">{{localize "MINIMAP.SETTINGS.OVERLAY.BOTTOM"}}</label>
    <input type="number" min="0" step="1" name="bottom" id="bottom" value="{{bottom}}">
  </div>
</section>