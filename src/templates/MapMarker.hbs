<section data-role="map-marker">
  <input type="hidden" name="id" id="{{idPrefix}}-id" value="{{marker.id}}" />

  <div class="form-group slim">
    <label>{{localize "TOKEN.Dimensions"}}</label>
    <div class="form-fields">
      <label for="{{idPrefix}}-width">{{localize "Width"}}</label>
      <input
        type="number"
        name="width"
        id="{{idPrefix}}-width"
        value="{{marker.width}}"
        min="1"
        step="1"
      />
      <label for="{{idPrefix}}-height">{{localize "Height"}}</label>
      <input
        type="number"
        name="height"
        id="{{idPrefix}}-height"
        value="{{marker.height}}"
        min="1"
        step="1"
      />
    </div>

  </div>

  <div class="form-group slim">
    <label>{{localize "Position"}}</label>
    <div class="form-fields">
      <label for="{{idPrefix}}-x">{{localize "MINIMAP.MARKERS.X"}}</label>
      <input
        type="number"
        name="x"
        id="{{idPrefix}}-x"
        min="0"
        step="1"
        value="{{marker.x}}"
      />
      <label for="{{idPrefix}}-y">{{localize "MINIMAP.MARKERS.Y"}}</label>
      <input
        type="number"
        name="y"
        id="{{idPrefix}}-y"
        min="0"
        step="1"
        value="{{marker.y}}"
      />
    </div>

  </div>

  <fieldset>
    <legend>{{localize "MINIMAP.MARKERS.LABEL.NAME"}}</legend>

    <div class="form-group">
      <label for="{{idPrefix}}-label">{{localize
          "MINIMAP.MARKERS.LABEL.NAME"
        }}</label>
      <input
        type="text"
        name="label"
        placeholder="{{localize 'MINIMAP.MARKERS.LABEL.NAME'}}"
        id="{{idPrefix}}-label"
        value="{{marker.label}}"
      />

    </div>

    <div class="form-group">
      <label for="{{idPrefix}}-showLabel">{{localize
          "MINIMAP.MARKERS.SHOWLABEL.NAME"
        }}</label>
      <input
        type="checkbox"
        name="showLabel"
        id="{{idPrefix}}-showLabel"
        {{checked marker.showLabel}}
      />
    </div>

    <div class="form-group">
      <label for="{{idPrefix}}-labelAlign">{{localize
          "MINIMAP.MARKERS.LABELALIGN.NAME"
        }}</label>
      <select name="labelAlign" id="{{idPrefix}}-labelAlign">
        {{selectOptions
          labelAlignSelect
          selected=marker.labelAlign
          localize=true
        }}
      </select>

    </div>

    <div class="form-group">
      <label for="{{idPrefix}}-fontFamily">{{localize
          "DRAWING.FontFamily"
        }}</label>
      <select name="fontFamily" id="{{idPrefix}}-fontFamily" data-font-select>
        {{selectOptions fontSelect selected=marker.fontFamily}}
      </select>

    </div>

    <div class="form-group">
      <label for="{{idPrefix}}-fontSize">{{localize "DRAWING.FontSize"}}</label>
      <input
        type="number"
        name="fontSize"
        id="fontSize"
        min="4"
        step="1"
        value="{{marker.fontSize}}"
      />

    </div>

    <div class="form-group">
      <label for="{{idPrefix}}-fontColor">{{localize
          "DRAWING.TextColor"
        }}</label>
      <color-picker
        id="{{idPrefix}}-fontColor"
        name="fontColor"
        value="{{marker.fontColor}}"
      ></color-picker>

    </div>
  </fieldset>

  <fieldset>
    <legend>{{localize "MINIMAP.MARKERS.ICON.NAME"}}</legend>
    <div class="form-group">
      <label for="{{idPrefix}}-icon">{{localize
          "MINIMAP.MARKERS.ICON.NAME"
        }}</label>
      <file-picker
        type="image"
        name="icon"
        id="{{idPrefix}}-icon"
        value="{{marker.icon}}"
      ></file-picker>

    </div>

    <div class="form-group">
      <label for="{{idPrefix}}-tint">{{localize
          "MINIMAP.MARKERS.TINT.NAME"
        }}</label>
      <color-picker
        name="tint"
        id="{{idPrefix}}-tint"
        value="{{marker.tint}}"
      ></color-picker>

    </div>

    <div class="form-group">
      <label for="{{idPrefix}}-dropShadow">{{localize
          "MINIMAP.MARKERS.DROPSHADOW.NAME"
        }}</label>
      <input
        type="checkbox"
        name="dropShadow"
        id="{{idPrefix}}-dropShadow"
        {{checked marker.dropShadow}}
      />

    </div>
  </fieldset>

</section>